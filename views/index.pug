       a(href="About.pug") About site
   
   div.container.text-center
    img(src="./public/covuni.png")
   div.container.text-center
    
   .jumbotron.center-block
    .text-center
     .lead.loginHeading Student Register
    .row
     .col-sm-6
      form(method="POST" action="/adduser" name="registeruser")
